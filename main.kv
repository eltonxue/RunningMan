# File name: main.py
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	StartScreen:
	SettingsScreen:
	CreditsScreen:
	GameScreen:
	
<StartScreen>:


	name: "start"
	

	FloatLayout:

        AsyncImage:
            source: 'assets/background/meadow.png'
            pos_hint: {"y": 0.1}

        AsyncImage:
        	source: 'assets/platform/platform1.png'
        	pos_hint: {"top": 0.6}
        	
		AsyncImage:
			source: "assets/start_menu/RunningManLogo.png"
			pos_hint: {"top": 1.05, "right": 0.86}
			size_hint: 0.7, 0.7
	
	BoxLayout:
		orientation: "horizontal"
		padding: 20
		spacing: 50
		
		Button:
			color: 0,200,237,1
			text: ""
			font_size: 25
			font_name: "assets/fonts/Amatic-Bold.ttf"
			size_hint: 0.1, 0.1
			on_release:	app.root.current = "settings"
			pos_hint: {"top": 0.45}
			background_color: 255,255,255,0
			
		Button:
			text: "Play"
			font_size: 35
			font_name: "assets/fonts/Amatic-Bold.ttf"
			color: 0,200,237,1
			size_hint: 0.1, 0.1
			on_release: app.root.current = "game"
			pos_hint: {"top": 0.55}
			background_color: 255,255,255,0.3
			
		Button:
			color: 0,200,237,1
			text: ""
			font_size: 25
			font_name: "assets/fonts/Amatic-Bold.ttf"
			size_hint: 0.1, 0.1
			on_release: app.root.current = "credits"
			pos_hint: {"top": 0.45}
			background_color: 255,255,255,0
		
<SettingsScreen>:
	name: "settings"
	
	FloatLayout:
	
		Button:
			color: 0,200,237,1
			text: "Back"
			font_size: 30
			font_name: "assets/fonts/Amatic-Bold.ttf"
			size_hint: 0.1, 0.1
			on_release: app.root.current = "start"
			pos_hint: {"right": 1, "top": 1} 
			
	BoxLayout:
		orientation: "vertical"

		padding: 20
		spacing: 50
		
		Button:
			text: root.music_on_off
			font_size: 35
			font_name: "assets/fonts/Amatic-Bold.ttf"
			color: 0,200,237,1
			size_hint: 0.1, 0.1
			on_press: root.toggle_music()
			pos_hint: {"top": 0.55}
			background_color: 255,255,255,0.3
			
		Button:
			text: root.soundfx_on_off
			font_size: 35
			font_name: "assets/fonts/Amatic-Bold.ttf"
			color: 0,200,237,1
			size_hint: 0.1, 0.1
			on_press: root.toggle_soundfx()
			pos_hint: {"top": 0.55}
			background_color: 255,255,255,0.3


<CreditsScreen>:
	name: "credits"
	
	FloatLayout:	
		Button:
			color: 0,200,237,1
			text: "Back"
			font_size: 30
			font_name: "assets/fonts/Amatic-Bold.ttf"
			size_hint: 0.1, 0.1
			on_release: app.root.current = "start"
			pos_hint: {"right": 1, "top": 1} 
	
	Label:
		text: 'Credits\n\nDeveloped by:\nChanun Sumphanphaisal\nElton Xue\nRichmond Rimando\n\nCITRUS HACK 2016'
		font_size: 22
		color: 0,200,237,1
		font_name: "assets/fonts/Amatic-Bold.ttf"

		
<GameScreen>:
	name: "game"
	
<GameOverScreen>:
	name: "game_over"
	Button:
		text: 'Menu'
		font_size: 20
		on_press: app.root.current = "start"
	
	
	
	